pipeline{
    agent{
        label 'slave-node-javaapp'
    }
  stages{
    stage('Build'){
        steps{
            echo "We are in the build stage"
            sh 'mvn -f jenkins/java-tomcat-sample/pom.xml clean package'
            echo "Building completed."
                        }
            post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
            }
            }
        }
        stage('Create Tomcat Image') {
            agent {
                label 'slave-node-javaapp'
            }
            steps {
                copyArtifacts filter: '**/*.war', fingerprintArtifacts: true, projectName: env.JOB_NAME, selector: specific(env.BUILD_NUMBER)
                echo "Building docker image"
                sh '''
                original_pwd=$(pwd -P)
                cd jenkins/java-tomcat-sample
                docker build -t localtomcatimg:$BUILD_NUMBER .
                cd $original_pwd
                sh '''
            }
        }
    stage('Deploy QA instance'){
        agent {
            label 'slave-node-javaapp'
        }
        steps{
            echo "We are in the deploy to QA instance"
                sh '''
                docker stop tomcatInstanceQA || true
                docker rm tomcatInstanceQA || true
                docker run -itd --name tomcatInstanceQA -p 8082:8080 localtomcatimg:$BUILD_NUMBER
                sh '''
            }
        }
    stage('Deploy UAT instance'){
        agent {
            label 'slave-node-javaapp'
        }
        steps{
                timeout(time:1, unit:'DAYS'){
                input message:'Approve UAT Deployment?'
                }
                echo "Running app on UAT env"
                sh '''
                docker stop tomcatInstanceUAT || true
                docker rm tomcatInstanceUAT || true
                docker run -itd --name tomcatInstanceUAT -p 8083:8080 localtomcatimg:$BUILD_NUMBER
                '''
            }
        }
    }
    post { 
        always { 
            mail to: 'devopsuryaraj@gmail.com',
            subject: "Job '${JOB_NAME}' (${BUILD_NUMBER}) is waiting for input",
            body: "Please go to ${BUILD_URL} and verify the build"
        }
        success {
            mail bcc: '', body: """Hi Team,

Build #$BUILD_NUMBER is successful, please go through the url

$BUILD_URL

and verify the details.

Regards,
DevOps Team""", cc: '', from: '', replyTo: '', subject: 'BUILD SUCCESS NOTIFICATION', to: 'devopsuryaraj@gmail.com'
        }
    }
}
