pipeline{
    agent any
  stages{
    stage('Build'){
        steps{
            echo "We are in the build stage"
            sh 'mvn -f jenkins/java-tomcat-sample/pom.xml clean package'
            echo "Building completed."
                        }
            post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
            }
            }
        }
    stage('Deploy QA instance'){
        steps{
            echo "We are in the deploy stage"
            }
        }
    stage('Deploy Production instance'){
        steps{
            echo "We are in the Production stage"
            }
        }
    }
}
